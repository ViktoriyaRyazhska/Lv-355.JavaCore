public class Block {

    private int width;
    private int height;
    private int length;

    public Block(int[] dim) {

        this.width = dim[0];
        this.length = dim[1];
        this.height = dim[2];

    }

    public int getWidth() {
        return width;
    }

    public int getHeight() {
        return height;
    }

    public int getLength() {
        return length;
    }

    public int getVolume() {
        return width * height * length;
    }

    public int getSurfaceArea() {
        return 2 * ( length * width + length * height + width * height);
    }
}
