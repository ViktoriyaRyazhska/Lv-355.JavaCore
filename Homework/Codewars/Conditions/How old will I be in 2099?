public class AgeDiff 
{
  public static String CalculateAge(int birth, int yearTo) 
  {
    if(birth < yearTo){
      return "You are " + (yearTo - birth) + " year" + ((yearTo - birth == 1) ? "" : "s") +" old.";
    }
    if(birth == yearTo){
      return "You were born this very year!";
    }
    if(birth > yearTo){
      return "You will be born in " + (birth - yearTo) + " year" + ((birth - yearTo == 1) ? "" : "s") + ".";
    }
    return "";
  }
}
